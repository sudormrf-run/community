---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Sudoremove Community - AI의 문턱을 낮추다' } = Astro.props;
const currentPath = Astro.url.pathname;

// 네비게이션 구조
const navigation = [
  {
    title: 'Physical AI',
    items: [
      { title: '개요', href: '/community/docs/physical-ai/getting-started' },
      {
        title: 'LeRobot',
        items: [
          { title: '소개', href: '/community/docs/physical-ai/lerobot/intro' },
          { title: '시작하기', href: '/community/docs/physical-ai/lerobot/getting-started' },
          { title: '하드웨어 가이드', href: '/community/docs/physical-ai/lerobot/hardware' },
          { title: '핵심 개념', href: '/community/docs/physical-ai/lerobot/concepts' },
          { title: '튜토리얼', href: '/community/docs/physical-ai/lerobot/tutorials' },
          { title: '고급 주제', href: '/community/docs/physical-ai/lerobot/advanced' },
          { title: '리소스', href: '/community/docs/physical-ai/lerobot/resources' },
        ]
      }
    ]
  },
  {
    title: 'LLM 강의',
    items: [
      { title: '기초', href: '/community/docs/llm/basics' },
      { title: '고급', href: '/community/docs/llm/advanced' },
    ]
  }
];
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/community/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-one-dark.min.css">
    <title>{title} | Sudoremove Docs</title>
  </head>
  <body>
    <div class="docs-layout">
      <!-- 헤더 -->
      <header class="docs-header">
        <div class="header-content">
          <a href="/community/" class="logo">Sudoremove</a>
          <nav class="header-nav">
            <a href="/community/">홈</a>
            <a href="/community/docs">문서</a>
            <a href="/community/board">게시판</a>
            <a href="/community/archive">행사</a>
          </nav>
        </div>
      </header>

      <div class="docs-container">
        <!-- 사이드바 -->
        <aside class="docs-sidebar">
          <nav class="sidebar-nav">
            {navigation.map((section) => (
              <div class="nav-section">
                <h3>{section.title}</h3>
                <ul>
                  {section.items.map((item) => (
                    <li>
                      {item.items ? (
                        <>
                          <span class="nav-group-title">{item.title}</span>
                          <ul class="nav-group">
                            {item.items.map((subItem) => (
                              <li>
                                <a 
                                  href={subItem.href} 
                                  class={currentPath === subItem.href ? 'active' : ''}
                                >
                                  {subItem.title}
                                </a>
                              </li>
                            ))}
                          </ul>
                        </>
                      ) : (
                        <a 
                          href={item.href}
                          class={currentPath === item.href ? 'active' : ''}
                        >
                          {item.title}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </nav>
        </aside>

        <!-- 메인 콘텐츠 -->
        <main class="docs-main">
          <article class="docs-content">
            <slot />
          </article>
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  :root {
    --primary-color: #1a1a2e;
    --secondary-color: #16213e;
    --accent-color: #e94560;
    --text-color: #f5f5f5;
    --background-color: #0f0f0f;
    --sidebar-width: 280px;
    --header-height: 60px;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    background: var(--background-color);
    color: var(--text-color);
  }

  .docs-layout {
    min-height: 100vh;
  }

  /* 헤더 */
  .docs-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background: var(--primary-color);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 100;
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--accent-color);
    text-decoration: none;
  }

  .header-nav {
    display: flex;
    gap: 2rem;
  }

  .header-nav a {
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.3s;
  }

  .header-nav a:hover {
    color: var(--accent-color);
  }

  /* 메인 컨테이너 */
  .docs-container {
    display: flex;
    padding-top: var(--header-height);
  }

  /* 사이드바 */
  .docs-sidebar {
    position: fixed;
    left: 0;
    top: var(--header-height);
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    background: var(--secondary-color);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    overflow-y: auto;
    padding: 2rem 0;
  }

  .sidebar-nav {
    padding: 0 1.5rem;
  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .nav-section h3 {
    color: var(--accent-color);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .nav-section ul {
    list-style: none;
  }

  .nav-section li {
    margin-bottom: 0.5rem;
  }

  .nav-section a {
    color: #ccc;
    text-decoration: none;
    display: block;
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    transition: all 0.2s;
  }

  .nav-section a:hover {
    color: var(--text-color);
    background: rgba(255, 255, 255, 0.05);
  }

  .nav-section a.active {
    color: var(--accent-color);
    background: rgba(233, 69, 96, 0.1);
  }

  .nav-group-title {
    display: block;
    padding: 0.375rem 0.75rem;
    color: var(--text-color);
    font-weight: 600;
  }

  .nav-group {
    margin-left: 1rem;
  }

  /* 메인 콘텐츠 */
  .docs-main {
    flex: 1;
    margin-left: var(--sidebar-width);
    min-width: 0;
  }

  .docs-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  /* 콘텐츠 스타일 */
  .docs-content h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .docs-content h2 {
    font-size: 1.875rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--accent-color);
  }

  .docs-content h3 {
    font-size: 1.375rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--accent-color);
  }

  .docs-content p {
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .docs-content ul, .docs-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .docs-content li {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .docs-content blockquote {
    border-left: 4px solid var(--accent-color);
    background: rgba(233, 69, 96, 0.1);
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
  }

  .docs-content code {
    background: var(--secondary-color);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  .docs-content pre {
    background: #1e1e2e !important;
    border: 1px solid #313244;
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .docs-content pre code {
    background: none;
    padding: 0;
    font-size: 0.875rem;
  }

  .docs-content a {
    color: var(--accent-color);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .docs-content a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  .docs-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  .docs-content th {
    background: var(--primary-color);
    color: var(--accent-color);
    padding: 0.75rem;
    text-align: left;
  }

  .docs-content td {
    border: 1px solid #313244;
    padding: 0.75rem;
  }

  /* 모바일 대응 */
  @media (max-width: 768px) {
    .docs-sidebar {
      transform: translateX(-100%);
      transition: transform 0.3s;
    }

    .docs-main {
      margin-left: 0;
    }

    .header-nav {
      display: none;
    }
  }
</style>