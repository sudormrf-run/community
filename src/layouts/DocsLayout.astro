---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Sudoremove Community - AI의 문턱을 낮추다' } = Astro.props;
const currentPath = Astro.url.pathname;

// 네비게이션 구조
const navigation = [
  {
    title: 'LeRobot',
    items: [
      { title: '소개', href: '/community/docs/physical-ai/lerobot/intro' },
      { title: '시작하기', href: '/community/docs/physical-ai/lerobot/getting-started' },
      {
        title: '하드웨어',
        items: [
          { title: '선택 가이드', href: '/community/docs/physical-ai/lerobot/hardware' },
          { title: 'SO-ARM101', href: '/community/docs/physical-ai/lerobot/hardware/so-101' },
          { title: 'Koch v1.1', href: '/community/docs/physical-ai/lerobot/hardware/koch' },
        ]
      },
      {
        title: '소프트웨어',
        items: [
          { title: '설치', href: '/community/docs/physical-ai/lerobot/software/installation' },
          { title: 'Teleoperation', href: '/community/docs/physical-ai/lerobot/software/teleoperation' },
          { title: '데이터 수집', href: '/community/docs/physical-ai/lerobot/software/data-collection' },
          { title: '학습', href: '/community/docs/physical-ai/lerobot/software/training' },
        ]
      },
      {
        title: '튜토리얼',
        items: [
          { title: 'Imitation Learning 실전 가이드', href: '/community/docs/physical-ai/lerobot/tutorials/imitation-learning' },
        ]
      },
      {
        title: 'Policy',
        items: [
          { title: 'ACT', href: '/community/docs/physical-ai/lerobot/policy/act' },
          { title: 'SmolVLA', href: '/community/docs/physical-ai/lerobot/policy/smolvla' },
        ]
      }
    ]
  },
  {
    title: 'LLM 강의',
    items: [
      { title: 'LLM 파인튜닝 과정', href: 'https://jonhpark7966.github.io/FineTuning_Course/', external: true },
    ]
  }
];
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpeg" href="/community/sudormrf.jpg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-one-dark.min.css">
    <title>{title} | SUDO REMOVE Docs</title>
  </head>
  <body>
    <div class="docs-layout">
      <!-- 헤더 -->
      <nav class="docs-nav">
        <div class="nav-container">
          <a href="/community/" class="logo">
            <img src="/community/sudormrf.jpg" alt="SUDO REMOVE" width="40" height="40" style="border-radius: 50%;" />
            <span class="logo-text">sudo rm -rf<span class="cursor">_</span></span>
          </a>
          
          <!-- 모바일 메뉴 버튼 -->
          <button class="mobile-menu-btn" onclick="toggleMobileMenu()">
            <span class="hamburger"></span>
            <span class="hamburger"></span>
            <span class="hamburger"></span>
          </button>
          
          <!-- 네비게이션 메뉴 -->
          <ul class="nav-links" id="navLinks">
            <li><a href="/community/">홈</a></li>
            <li><a href="/community/docs">문서</a></li>
            <li><a href="https://github.com/orgs/sudormrf-run/discussions" target="_blank">게시판</a></li>
            <li><a href="/community/archive">행사</a></li>
            <li><a href="/community/people">People</a></li>
            <li><a href="#" onclick="alert('Coming Soon!'); return false;">Shop</a></li>
            <li><a href="https://sudormrf.run" target="_blank">Blog</a></li>
          </ul>
        </div>
      </nav>

      <div class="docs-container">
        <!-- 사이드바 -->
        <aside class="docs-sidebar">
          <nav class="sidebar-nav">
            {navigation.map((section) => (
              <div class="nav-section">
                <h3>
                  <i class={section.title === 'Physical AI' ? 'fas fa-robot' : 'fas fa-brain'}></i>
                  {section.title}
                </h3>
                <ul>
                  {section.items.map((item) => (
                    <li>
                      {item.items ? (
                        <>
                          <span class="nav-group-title">
                            <i class="fas fa-folder"></i>
                            {item.title}
                          </span>
                          <ul class="nav-group">
                            {item.items.map((subItem) => (
                              <li>
                                <a 
                                  href={subItem.href} 
                                  class={currentPath === subItem.href ? 'active' : ''}
                                >
                                  <i class="fas fa-file-alt"></i>
                                  {subItem.title}
                                </a>
                              </li>
                            ))}
                          </ul>
                        </>
                      ) : (
                        <a 
                          href={item.href}
                          class={currentPath === item.href ? 'active' : ''}
                          target={item.external ? '_blank' : undefined}
                          rel={item.external ? 'noopener noreferrer' : undefined}
                        >
                          <i class={item.external ? 'fas fa-external-link-alt' : 'fas fa-file-alt'}></i>
                          {item.title}
                          {item.external && <span class="external-indicator"> ↗</span>}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </nav>
        </aside>

        <!-- 메인 콘텐츠 -->
        <main class="docs-main">
          <article class="docs-content">
            <slot />
          </article>
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700;800&display=swap');
  
  :root {
    --sidebar-width: 280px;
    --header-height: 70px;
    --nav-height: 70px;
    --docs-bg: #0d030f;
    --sidebar-bg: rgba(13, 3, 15, 0.95);
    --header-bg: rgba(13, 3, 15, 0.95);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    background: #0d030f;
    color: #ffffff;
  }

  .docs-layout {
    min-height: 100vh;
    background: #0d030f;
  }

  /* 네비게이션 - 메인 레이아웃과 동일한 스타일 */
  .docs-nav {
    background: var(--header-bg);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(253, 115, 24, 0.2);
    height: var(--nav-height);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    box-shadow: 0 2px 20px rgba(253, 115, 24, 0.1);
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: transform 0.2s;
  }
  
  .logo:hover {
    transform: scale(1.05);
  }
  
  .logo img {
    filter: drop-shadow(0 0 10px rgba(253, 115, 24, 0.5));
  }
  
  .logo-text {
    font-family: 'JetBrains Mono', 'Courier New', monospace;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--color-green);
    letter-spacing: 0.05em;
  }
  
  .cursor {
    animation: blink 1s infinite;
    color: var(--color-green);
    font-weight: 800;
  }
  
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--color-text-muted);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-md);
    transition: all 0.2s;
    position: relative;
  }

  .nav-links a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--color-orange);
    transition: all 0.3s;
    transform: translateX(-50%);
  }

  .nav-links a:hover {
    color: var(--color-orange);
  }
  
  .nav-links a:hover::after {
    width: 80%;
  }

  /* 메인 컨테이너 */
  .docs-container {
    display: flex;
    padding-top: var(--nav-height);
  }

  /* 사이드바 */
  .docs-sidebar {
    position: fixed;
    left: 0;
    top: var(--nav-height);
    width: var(--sidebar-width);
    height: calc(100vh - var(--nav-height));
    background: var(--sidebar-bg);
    border-right: 1px solid rgba(253, 115, 24, 0.1);
    overflow-y: auto;
    padding: 2rem 0;
  }

  .sidebar-nav {
    padding: 0 1.5rem;
  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .nav-section h3 {
    color: var(--color-orange);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    padding-left: 0.75rem;
  }

  .nav-section ul {
    list-style: none;
  }

  .nav-section li {
    margin-bottom: 0.5rem;
  }

  .nav-section a {
    color: #ccc;
    text-decoration: none;
    display: block;
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    transition: all 0.2s;
  }

  .nav-section a:hover {
    color: var(--text-color);
    background: rgba(255, 255, 255, 0.05);
  }

  .nav-section a.active {
    color: var(--color-orange);
    background: rgba(253, 115, 24, 0.2);
    border-left: 3px solid var(--color-orange);
    padding-left: calc(0.75rem - 3px);
    font-weight: 600;
  }
  
  .external-indicator {
    font-size: 0.8em;
    opacity: 0.7;
  }

  .nav-group-title {
    display: block;
    padding: 0.375rem 0.75rem;
    color: var(--text-color);
    font-weight: 600;
  }

  .nav-group {
    margin-left: 1rem;
  }

  /* 메인 콘텐츠 */
  .docs-main {
    flex: 1;
    margin-left: var(--sidebar-width);
    min-width: 0;
  }

  .docs-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 3rem;
    background: #0d030f;
    color: #ffffff;
  }

  /* 콘텐츠 스타일 */
  .docs-content h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--text-color);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .docs-content h2 {
    font-size: 1.875rem;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-orange);
    letter-spacing: -0.01em;
  }

  .docs-content h3 {
    font-size: 1.375rem;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: var(--color-green);
    letter-spacing: -0.01em;
  }

  .docs-content p {
    line-height: 1.8;
    margin-bottom: 1.75rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .docs-content ul, .docs-content ol {
    margin-bottom: 2rem;
    padding-left: 1.5rem;
    margin-left: 0.5rem;
  }

  .docs-content li {
    margin-bottom: 0.75rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .docs-content li::marker {
    color: var(--color-orange);
  }

  .docs-content blockquote {
    border-left: 4px solid var(--color-orange);
    background: rgba(253, 115, 24, 0.05);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .docs-content code {
    background: rgba(253, 115, 24, 0.1);
    color: var(--color-yellow);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: 'Fira Code', 'Consolas', 'Monaco', 'Andale Mono', 'Ubuntu Mono', monospace;
  }

  .docs-content pre {
    background: rgba(13, 3, 15, 0.95) !important;
    border: 1px solid rgba(253, 115, 24, 0.2);
    border-radius: 0.75rem;
    padding: 2rem;
    overflow-x: auto;
    margin: 2rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .docs-content pre code {
    background: none;
    padding: 0;
    font-size: 0.875rem;
  }

  .docs-content a {
    color: var(--color-orange);
    text-decoration: none;
    transition: all 0.2s;
    border-bottom: 1px solid transparent;
  }

  .docs-content a:hover {
    opacity: 0.9;
    border-bottom-color: var(--color-orange);
  }

  .docs-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .docs-content th {
    background: rgba(253, 115, 24, 0.1);
    color: var(--color-orange);
    padding: 1rem 1.25rem;
    text-align: left;
    border: 1px solid rgba(253, 115, 24, 0.2);
    font-weight: 600;
  }

  .docs-content td {
    border: 1px solid rgba(253, 115, 24, 0.1);
    padding: 1rem 1.25rem;
    color: rgba(255, 255, 255, 0.9);
  }

  /* 콘텐츠 추가 스타일 */
  .docs-content tr:hover td {
    background: var(--color-surface);
  }
  
  /* 코드 복사 버튼 */
  .code-copy-button {
    position: absolute;
    top: var(--spacing-2);
    right: var(--spacing-2);
    padding: var(--spacing-1) var(--spacing-3);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    font-size: var(--text-xs);
    cursor: pointer;
    transition: all var(--transition-base);
    opacity: 0;
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
  }
  
  pre:hover .code-copy-button {
    opacity: 1;
  }
  
  .code-copy-button:hover {
    background: var(--color-surface-hover);
    color: var(--color-text);
    border-color: var(--color-accent);
  }
  
  .code-copy-button.copied {
    color: var(--color-success);
    border-color: var(--color-success);
  }

  /* 모바일 메뉴 버튼 */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    flex-direction: column;
    gap: 4px;
  }

  .hamburger {
    display: block;
    width: 25px;
    height: 3px;
    background: var(--color-text);
    border-radius: 2px;
    transition: all 0.3s;
  }

  .mobile-menu-btn.active .hamburger:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-btn.active .hamburger:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-btn.active .hamburger:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* 모바일 대응 */
  @media (max-width: 1024px) {
    .docs-toc {
      display: none;
    }
  }
  
  @media (max-width: 768px) {
    .mobile-menu-btn {
      display: flex;
    }

    .nav-links {
      position: absolute;
      top: var(--nav-height);
      left: 0;
      right: 0;
      background: var(--header-bg);
      flex-direction: column;
      padding: 1rem 0;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      border-bottom: 1px solid rgba(253, 115, 24, 0.2);
      transform: translateY(-100%);
      opacity: 0;
      pointer-events: none;
      transition: all 0.3s ease;
    }

    .nav-links.active {
      transform: translateY(0);
      opacity: 1;
      pointer-events: all;
    }

    .nav-links li {
      width: 100%;
    }

    .nav-links a {
      display: block;
      padding: 0.75rem 2rem;
      width: 100%;
      text-align: left;
    }

    .nav-links a:hover {
      background: rgba(253, 115, 24, 0.1);
    }

    .nav-links a::after {
      display: none;
    }

    .docs-sidebar {
      transform: translateX(-100%);
      transition: transform var(--transition-slow);
      z-index: 90;
    }

    .docs-main {
      margin-left: 0;
    }
    
    .docs-content {
      padding: 2rem 1.5rem;
    }

    .nav-container {
      padding: 0 1rem;
    }

    .logo-text {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 480px) {
    .docs-content {
      padding: 1.5rem 1rem;
    }

    .docs-content h1 {
      font-size: 2rem;
    }

    .docs-content h2 {
      font-size: 1.5rem;
    }

    .docs-content h3 {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  function toggleMobileMenu() {
    const navLinks = document.getElementById('navLinks');
    const menuBtn = document.querySelector('.mobile-menu-btn');
    
    navLinks.classList.toggle('active');
    menuBtn.classList.toggle('active');
  }

  // 메뉴 외부 클릭 시 닫기
  document.addEventListener('click', function(event) {
    const navLinks = document.getElementById('navLinks');
    const menuBtn = document.querySelector('.mobile-menu-btn');
    const nav = document.querySelector('.docs-nav');
    
    if (!nav.contains(event.target) && navLinks.classList.contains('active')) {
      navLinks.classList.remove('active');
      menuBtn.classList.remove('active');
    }
  });
</script>