---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Sudoremove Community - AI의 문턱을 낮추다' } = Astro.props;
const currentPath = Astro.url.pathname;

// 네비게이션 구조
const navigation = [
  {
    title: 'Physical AI',
    items: [
      { title: '개요', href: '/community/docs/physical-ai/getting-started' },
      {
        title: 'LeRobot',
        items: [
          { title: '소개', href: '/community/docs/physical-ai/lerobot/intro' },
          { title: '시작하기', href: '/community/docs/physical-ai/lerobot/getting-started' },
          { title: '하드웨어 가이드', href: '/community/docs/physical-ai/lerobot/hardware' },
          { title: '핵심 개념', href: '/community/docs/physical-ai/lerobot/concepts' },
          { title: '튜토리얼', href: '/community/docs/physical-ai/lerobot/tutorials' },
          { title: '고급 주제', href: '/community/docs/physical-ai/lerobot/advanced' },
          { title: '리소스', href: '/community/docs/physical-ai/lerobot/resources' },
        ]
      }
    ]
  },
  {
    title: 'LLM 강의',
    items: [
      { title: '기초', href: '/community/docs/llm/basics' },
      { title: '고급', href: '/community/docs/llm/advanced' },
    ]
  }
];
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpeg" href="/community/sudormrf.jpg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism-themes/1.9.0/prism-one-dark.min.css">
    <title>{title} | Sudoremove Docs</title>
  </head>
  <body>
    <div class="docs-layout">
      <!-- 헤더 -->
      <header class="docs-header">
        <div class="header-content">
          <a href="/community/" class="logo">
            <img src="/community/sudormrf.jpg" alt="Sudoremove" width="40" height="40" style="border-radius: 50%;" />
            <span>Sudoremove</span>
          </a>
          <nav class="header-nav">
            <a href="/community/">홈</a>
            <a href="/community/docs">문서</a>
            <a href="/community/board">게시판</a>
            <a href="/community/archive">행사</a>
          </nav>
        </div>
      </header>

      <div class="docs-container">
        <!-- 사이드바 -->
        <aside class="docs-sidebar">
          <nav class="sidebar-nav">
            {navigation.map((section) => (
              <div class="nav-section">
                <h3>{section.title}</h3>
                <ul>
                  {section.items.map((item) => (
                    <li>
                      {item.items ? (
                        <>
                          <span class="nav-group-title">{item.title}</span>
                          <ul class="nav-group">
                            {item.items.map((subItem) => (
                              <li>
                                <a 
                                  href={subItem.href} 
                                  class={currentPath === subItem.href ? 'active' : ''}
                                >
                                  {subItem.title}
                                </a>
                              </li>
                            ))}
                          </ul>
                        </>
                      ) : (
                        <a 
                          href={item.href}
                          class={currentPath === item.href ? 'active' : ''}
                        >
                          {item.title}
                        </a>
                      )}
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </nav>
        </aside>

        <!-- 메인 콘텐츠 -->
        <main class="docs-main">
          <article class="docs-content">
            <slot />
          </article>
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  :root {
    --sidebar-width: 280px;
    --header-height: 70px;
    --docs-bg: #0d030f;
    --sidebar-bg: rgba(13, 3, 15, 0.95);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    background: #0d030f;
    color: #ffffff;
  }

  .docs-layout {
    min-height: 100vh;
    background: #0d030f;
  }

  /* 헤더 */
  .docs-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: var(--header-height);
    background: rgba(13, 3, 15, 0.98);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(253, 115, 24, 0.2);
    z-index: 100;
    box-shadow: 0 2px 20px rgba(253, 115, 24, 0.1);
  }

  .header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }
  
  .logo img {
    filter: drop-shadow(0 0 10px rgba(253, 115, 24, 0.5));
  }
  
  .logo span {
    font-size: 1.5rem;
    font-weight: bold;
    background: linear-gradient(45deg, var(--color-orange), var(--color-yellow));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .header-nav {
    display: flex;
    gap: 2rem;
  }

  .header-nav a {
    color: #ffffff;
    text-decoration: none;
    transition: color 0.3s;
  }

  .header-nav a:hover {
    color: var(--accent-color);
  }

  /* 메인 컨테이너 */
  .docs-container {
    display: flex;
    padding-top: var(--header-height);
  }

  /* 사이드바 */
  .docs-sidebar {
    position: fixed;
    left: 0;
    top: var(--header-height);
    width: var(--sidebar-width);
    height: calc(100vh - var(--header-height));
    background: var(--sidebar-bg);
    border-right: 1px solid rgba(253, 115, 24, 0.1);
    overflow-y: auto;
    padding: 2rem 0;
  }

  .sidebar-nav {
    padding: 0 1.5rem;
  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .nav-section h3 {
    color: var(--color-orange);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    padding-left: 0.75rem;
  }

  .nav-section ul {
    list-style: none;
  }

  .nav-section li {
    margin-bottom: 0.5rem;
  }

  .nav-section a {
    color: #ccc;
    text-decoration: none;
    display: block;
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    transition: all 0.2s;
  }

  .nav-section a:hover {
    color: var(--text-color);
    background: rgba(255, 255, 255, 0.05);
  }

  .nav-section a.active {
    color: var(--color-orange);
    background: rgba(253, 115, 24, 0.1);
    border-left: 3px solid var(--color-orange);
  }

  .nav-group-title {
    display: block;
    padding: 0.375rem 0.75rem;
    color: var(--text-color);
    font-weight: 600;
  }

  .nav-group {
    margin-left: 1rem;
  }

  /* 메인 콘텐츠 */
  .docs-main {
    flex: 1;
    margin-left: var(--sidebar-width);
    min-width: 0;
  }

  .docs-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 4rem 3rem;
    background: #0d030f;
    color: #ffffff;
  }

  /* 콘텐츠 스타일 */
  .docs-content h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: var(--text-color);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .docs-content h2 {
    font-size: 1.875rem;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--color-orange);
    letter-spacing: -0.01em;
  }

  .docs-content h3 {
    font-size: 1.375rem;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    color: var(--color-green);
    letter-spacing: -0.01em;
  }

  .docs-content p {
    line-height: 1.8;
    margin-bottom: 1.75rem;
    color: rgba(255, 255, 255, 0.9);
  }

  .docs-content ul, .docs-content ol {
    margin-bottom: 2rem;
    padding-left: 1.5rem;
    margin-left: 0.5rem;
  }

  .docs-content li {
    margin-bottom: 0.75rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .docs-content li::marker {
    color: var(--color-orange);
  }

  .docs-content blockquote {
    border-left: 4px solid var(--color-orange);
    background: rgba(253, 115, 24, 0.05);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    font-style: italic;
    border-radius: 0 0.5rem 0.5rem 0;
  }

  .docs-content code {
    background: rgba(253, 115, 24, 0.1);
    color: var(--color-yellow);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    font-family: 'Fira Code', 'Consolas', 'Monaco', 'Andale Mono', 'Ubuntu Mono', monospace;
  }

  .docs-content pre {
    background: rgba(13, 3, 15, 0.95) !important;
    border: 1px solid rgba(253, 115, 24, 0.2);
    border-radius: 0.75rem;
    padding: 2rem;
    overflow-x: auto;
    margin: 2rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .docs-content pre code {
    background: none;
    padding: 0;
    font-size: 0.875rem;
  }

  .docs-content a {
    color: var(--color-orange);
    text-decoration: none;
    transition: all 0.2s;
    border-bottom: 1px solid transparent;
  }

  .docs-content a:hover {
    opacity: 0.9;
    border-bottom-color: var(--color-orange);
  }

  .docs-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    overflow: hidden;
    border-radius: 0.5rem;
  }

  .docs-content th {
    background: rgba(253, 115, 24, 0.1);
    color: var(--color-orange);
    padding: 1rem 1.25rem;
    text-align: left;
    border: 1px solid rgba(253, 115, 24, 0.2);
    font-weight: 600;
  }

  .docs-content td {
    border: 1px solid rgba(253, 115, 24, 0.1);
    padding: 1rem 1.25rem;
    color: rgba(255, 255, 255, 0.9);
  }

  /* 추가 콘텐츠 스타일 */
  .docs-content > *:first-child {
    margin-top: 0;
  }
  
  .docs-content > *:last-child {
    margin-bottom: 0;
  }
  
  /* 코드 블록 내부 여백 */
  .docs-content pre code {
    display: block;
    line-height: 1.6;
  }
  
  /* 섹션 간 구분 */
  .docs-content hr {
    border: none;
    border-top: 1px solid rgba(253, 115, 24, 0.2);
    margin: 3rem 0;
  }
  
  /* 강조 텍스트 */
  .docs-content strong {
    color: var(--color-yellow);
    font-weight: 600;
  }
  
  .docs-content em {
    color: var(--color-green);
  }
  
  /* 중첩된 리스트 스타일 */
  .docs-content ul ul,
  .docs-content ol ul,
  .docs-content ul ol,
  .docs-content ol ol {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
  
  /* 리스트 아이템 간격 */
  .docs-content li > p {
    margin-bottom: 0.5rem;
  }
  
  .docs-content li > p:last-child {
    margin-bottom: 0;
  }

  /* 모바일 대응 */
  @media (max-width: 768px) {
    .docs-sidebar {
      transform: translateX(-100%);
      transition: transform 0.3s;
    }

    .docs-main {
      margin-left: 0;
    }

    .header-nav {
      display: none;
    }
    
    .docs-content {
      padding: 2rem 1.5rem;
    }
    
    .docs-content h1 {
      font-size: 2rem;
    }
    
    .docs-content h2 {
      font-size: 1.5rem;
    }
    
    .docs-content h3 {
      font-size: 1.25rem;
    }
  }
</style>