---
// Giscus 컴포넌트
interface Props {
  mapping?: string;
  term?: string;
}

const { mapping = 'pathname', term } = Astro.props;
---

<div class="giscus-container">
  <script src="https://giscus.app/client.js"
    data-repo="sudormrf-run/community"
    data-repo-id="R_kgDONjDaow"
    data-category="General"
    data-category-id="DIC_kwDONjDao84ClXPF"
    data-mapping={mapping}
    data-term={term}
    data-strict="0"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="top"
    data-theme="dark_dimmed"
    data-lang="ko"
    data-loading="lazy"
    crossorigin="anonymous"
    async>
  </script>
</div>

<style>
  .giscus-container {
    margin-top: 2rem;
    padding: 1rem;
    background: var(--secondary-color);
    border-radius: 0.5rem;
  }
</style>