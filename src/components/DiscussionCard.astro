---
import type { Discussion } from '../lib/github-api';
import { formatDate } from '../lib/github-api';

interface Props {
  discussion: Discussion;
}

const { discussion } = Astro.props;
---

<article class="discussion-card">
  <div class="discussion-header">
    <img src={discussion.author.avatarUrl} alt={discussion.author.login} class="author-avatar" />
    <div class="discussion-meta">
      <a href={`/board/discussion/${discussion.number}`} class="discussion-title">
        {discussion.title}
      </a>
      <div class="meta-info">
        <span class="author">{discussion.author.login}</span>
        <span class="separator">‚Ä¢</span>
        <span class="date">{formatDate(discussion.updatedAt)}</span>
        {discussion.category && (
          <>
            <span class="separator">‚Ä¢</span>
            <span class="category">
              {discussion.category.emoji} {discussion.category.name}
            </span>
          </>
        )}
      </div>
    </div>
  </div>
  
  <p class="discussion-preview">
    {discussion.body.slice(0, 150)}{discussion.body.length > 150 ? '...' : ''}
  </p>
  
  <div class="discussion-stats">
    <span class="stat">
      üí¨ {discussion.comments.totalCount} ÎåìÍ∏Ä
    </span>
    <a href={discussion.url} target="_blank" rel="noopener noreferrer" class="github-link">
      GitHubÏóêÏÑú Î≥¥Í∏∞ ‚Üí
    </a>
  </div>
</article>

<style>
  .discussion-card {
    background: #1a0f1f;
    border: 1px solid #333;
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-bottom: 1rem;
    transition: all 0.2s ease;
  }

  .discussion-card:hover {
    border-color: #fd7318;
    transform: translateY(-2px);
  }

  .discussion-header {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
  }

  .discussion-meta {
    flex: 1;
  }

  .discussion-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #ffffff;
    text-decoration: none;
    display: block;
    margin-bottom: 0.5rem;
  }

  .discussion-title:hover {
    color: #fd7318;
  }

  .meta-info {
    font-size: 0.875rem;
    color: #b8b8b8;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .author {
    font-weight: 500;
  }

  .separator {
    opacity: 0.5;
  }

  .category {
    background: #251730;
    padding: 0.25rem 0.5rem;
    border-radius: 1rem;
    font-size: 0.8rem;
  }

  .discussion-preview {
    color: #b8b8b8;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .discussion-stats {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: #b8b8b8;
  }

  .github-link {
    color: #fd7318;
    text-decoration: none;
    transition: color 0.2s;
  }

  .github-link:hover {
    color: #43d6a8;
  }
</style>