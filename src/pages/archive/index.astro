<style>
  /* CSS ë³€ìˆ˜ ì •ì˜ */
  :root {
    --primary-color: #1a0f1f;
    --secondary-color: #251730;
    --accent-color: #fd7318;
    --text-color: #ffffff;
    --text-muted: #b8b8b8;
    --color-green: #43d6a8;
    --color-blue: #5fadfe;
  }
  
  /* ë°°ê²½ìƒ‰ ê°•ì œ ì ìš© */
  body {
    background: #0d030f !important;
    color: #ffffff !important;
  }
  
  .archive-container {
    max-width: 1200px;
    margin: 0 auto;
    color: var(--text-color);
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-bottom: 3rem;
  }

  section {
    margin-bottom: 4rem;
  }

  section h2 {
    color: var(--accent-color);
    margin-bottom: 2rem;
  }

  /* ì˜ˆì •ëœ í–‰ì‚¬ */
  .event-card.upcoming {
    background: var(--secondary-color);
    border: 2px solid var(--accent-color);
    border-radius: 1rem;
    padding: 2rem;
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .event-date {
    text-align: center;
    padding: 1rem;
    background: var(--accent-color);
    border-radius: 0.5rem;
    min-width: 100px;
  }

  .event-date span {
    display: block;
    color: white;
  }

  .event-date .month {
    font-size: 0.9rem;
  }

  .event-date .day {
    font-size: 2rem;
    font-weight: bold;
    line-height: 1;
  }

  .event-date .year {
    font-size: 0.9rem;
  }

  .event-info {
    flex: 1;
  }

  .event-info h3 {
    margin-bottom: 0.5rem;
  }

  .event-details {
    display: flex;
    gap: 1.5rem;
    margin: 1rem 0;
    font-size: 0.9rem;
    color: #ccc;
  }

  .btn-register {
    display: inline-block;
    background: var(--accent-color);
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 0.25rem;
    text-decoration: none;
    transition: transform 0.3s;
  }

  .btn-register:hover {
    transform: translateY(-2px);
  }

  /* ì§€ë‚œ í–‰ì‚¬ */
  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .event-card.past {
    background: var(--secondary-color);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.3s;
  }

  .event-card.past:hover {
    transform: translateY(-4px);
  }

  .event-card.past img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: #333;
  }

  .event-card.past .event-info {
    padding: 1.5rem;
  }

  .event-date-text {
    color: var(--accent-color);
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .event-stats {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  /* ê°¤ëŸ¬ë¦¬ */
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
  }

  .gallery-item {
    aspect-ratio: 1;
    overflow: hidden;
    border-radius: 0.5rem;
    background: #333;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }

  .gallery-item:hover img {
    transform: scale(1.1);
  }

  @media (max-width: 768px) {
    .event-card.upcoming {
      flex-direction: column;
      text-align: center;
    }

    .event-details {
      justify-content: center;
    }
  }
</style>