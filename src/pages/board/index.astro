<style>
  :root {
    --primary-color: #1a0f1f;
    --secondary-color: #251730;
    --accent-color: #fd7318;
    --accent-green: #43d6a8;
    --text-color: #ffffff;
    --text-muted: #b8b8b8;
    --border-color: #333;
  }
  
  body {
    background: #0d030f !important;
    color: #ffffff !important;
  }
  
  .board-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .board-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .board-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--accent-color), var(--accent-green));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .subtitle {
    font-size: 1.3rem;
    color: var(--text-muted);
  }

  /* í†µê³„ ì„¹ì…˜ */
  .board-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .stat-card {
    background: var(--primary-color);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: transform 0.2s, border-color 0.2s;
  }

  .stat-card:hover {
    transform: translateY(-2px);
    border-color: var(--accent-color);
  }

  .stat-emoji {
    font-size: 2.5rem;
  }

  .stat-card h3 {
    font-size: 1.1rem;
    margin-bottom: 0.25rem;
  }

  .stat-card p {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin: 0;
  }

  /* ì¹´í…Œê³ ë¦¬ ì„¹ì…˜ */
  .categories-section {
    margin-bottom: 4rem;
  }

  .categories-section h2 {
    font-size: 2rem;
    color: var(--accent-color);
    margin-bottom: 0.5rem;
  }

  .section-desc {
    color: var(--text-muted);
    margin-bottom: 2rem;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .category-card {
    background: var(--secondary-color);
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    padding: 2rem;
    text-decoration: none;
    color: var(--text-color);
    display: block;
    position: relative;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--accent-color), var(--accent-green));
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(253, 115, 24, 0.2);
    border-color: var(--accent-color);
  }

  .category-card:hover::before {
    transform: translateX(0);
  }

  .category-card:hover .card-arrow {
    transform: translateX(5px);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .category-emoji {
    font-size: 2rem;
  }

  .category-card h3 {
    font-size: 1.3rem;
    margin: 0;
  }

  .category-card p {
    color: var(--text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .card-arrow {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    font-size: 1.5rem;
    color: var(--accent-color);
    transition: transform 0.3s ease;
  }

  /* ê°€ì´ë“œë¼ì¸ ì„¹ì…˜ */
