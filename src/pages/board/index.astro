---
import Layout from '../../layouts/Layout.astro';
import DiscussionsList from '../../components/DiscussionsList.astro';
import '../../styles/global.css';
---

<Layout title="커뮤니티 게시판">
  <div class="board-container">
    <div class="board-header">
      <h1>커뮤니티 게시판</h1>
      <p class="subtitle">Sudoremove 커뮤니티에서 자유롭게 소통하세요</p>
    </div>
    
    <div class="board-actions">
      <a href="https://github.com/orgs/sudormrf-run/discussions/new/choose" target="_blank" rel="noopener noreferrer" class="new-discussion-btn">
        ✍️ 새 글 작성
      </a>
    </div>
    
    <div class="discussions-section">
      <h2>최근 토론</h2>
      <DiscussionsList />
    </div>
    
    <div class="more-actions">
      <a href="https://github.com/orgs/sudormrf-run/discussions" target="_blank" rel="noopener noreferrer">
        GitHub Discussions에서 더 보기 →
      </a>
    </div>
  </div>
</Layout>

<style>
  body {
    background: #0d030f !important;
    color: #ffffff !important;
  }
  
  .board-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .board-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #fd7318;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #b8b8b8;
  }

  .board-actions {
    text-align: center;
    margin-bottom: 2rem;
  }

  .new-discussion-btn {
    display: inline-block;
    background: #fd7318;
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .new-discussion-btn:hover {
    background: #43d6a8;
    transform: translateY(-2px);
  }

  .discussions-section {
    margin-bottom: 3rem;
  }

  .discussions-section h2 {
    color: #fd7318;
    margin-bottom: 1.5rem;
  }

  .more-actions {
    text-align: center;
    padding: 2rem;
  }

  .more-actions a {
    color: #fd7318;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .more-actions a:hover {
    color: #43d6a8;
  }

  @media (max-width: 768px) {
    .board-container {
      padding: 1rem;
    }

    .frame-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    iframe {
      min-height: 600px;
    }
  }
</style>