---
import Layout from '../../layouts/Layout.astro';
import DiscussionCard from '../../components/DiscussionCard.astro';
import { fetchDiscussions } from '../../lib/github-api';
import '../../styles/global.css';

const discussions = await fetchDiscussions();
---

<Layout title="커뮤니티 게시판">
  <div class="board-container">
    <div class="board-header">
      <h1>커뮤니티 게시판</h1>
      <p class="subtitle">Sudoremove 커뮤니티에서 자유롭게 소통하세요</p>
      <a href="https://github.com/orgs/sudormrf-run/discussions/new/choose" target="_blank" rel="noopener noreferrer" class="new-discussion-btn">
        ✍️ 새 글 작성
      </a>
    </div>
    
    <div class="discussions-list">
      {discussions.length > 0 ? (
        discussions.map((discussion) => (
          <DiscussionCard discussion={discussion} />
        ))
      ) : (
        <div class="no-discussions">
          <p>아직 작성된 글이 없습니다.</p>
          <p>첫 번째 글을 작성해보세요!</p>
        </div>
      )}
    </div>

    <div class="more-link">
      <a href="https://github.com/orgs/sudormrf-run/discussions" target="_blank" rel="noopener noreferrer">
        GitHub Discussions에서 더 보기 →
      </a>
    </div>
  </div>
</Layout>

<style>
  body {
    background: #0d030f !important;
    color: #ffffff !important;
  }
  
  .board-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem;
  }

  .board-header {
    margin-bottom: 2rem;
    position: relative;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #fd7318;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #b8b8b8;
  }

  .new-discussion-btn {
    position: absolute;
    right: 0;
    top: 0;
    background: #fd7318;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .new-discussion-btn:hover {
    background: #43d6a8;
    transform: translateY(-2px);
  }

  .discussions-list {
    margin-bottom: 3rem;
  }

  .no-discussions {
    text-align: center;
    padding: 4rem 2rem;
    background: #1a0f1f;
    border: 1px solid #333;
    border-radius: 0.75rem;
  }

  .no-discussions p {
    color: #b8b8b8;
    margin: 0.5rem 0;
  }

  .more-link {
    text-align: center;
    padding: 2rem;
  }

  .more-link a {
    color: #fd7318;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .more-link a:hover {
    color: #43d6a8;
  }

  @media (max-width: 768px) {
    .board-header {
      text-align: center;
    }

    .new-discussion-btn {
      position: static;
      display: inline-block;
      margin-top: 1rem;
    }
  }
</style>