    background: var(--primary-color);
    border-radius: 1rem;
    padding: 3rem;
    margin-bottom: 4rem;
  }

  .board-guide h2 {
    color: var(--accent-color);
    margin-bottom: 2rem;
    text-align: center;
  }

  .guide-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .guide-item {
    text-align: center;
  }

  .guide-icon {
    font-size: 2.5rem;
    display: block;
