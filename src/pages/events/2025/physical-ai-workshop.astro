<style>
  :root {
    --primary-color: #1a0f1f;
    --secondary-color: #251730;
    --accent-color: #fd7318;
    --text-color: #ffffff;
    --text-muted: #b8b8b8;
    --color-green: #43d6a8;
    --color-blue: #5fadfe;
  }

  body {
    background: #0d030f !important;
    color: #ffffff !important;
  }

  .workshop-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    color: var(--text-color);
  }

  .hero-info {
    text-align: center;
    margin-bottom: 3rem;
  }

  .hero-info h1 {
    font-size: 2.5rem;
    color: var(--color-green);
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .poster-section {
    display: flex;
    justify-content: center;
    margin-bottom: 4rem;
  }

  .poster {
    max-width: 500px;
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .event-details {
    margin-bottom: 2rem;
  }

  .event-details p {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
  }

  .register-btn {
    display: inline-block;
    background: var(--accent-color);
    color: white;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s;
  }

  .register-btn:hover {
    background: #e55f0a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(253, 115, 24, 0.4);
  }

  section {
    margin-bottom: 4rem;
  }

  section h2 {
    color: var(--accent-color);
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .event-info p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .speakers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .speaker-card {
    background: var(--secondary-color);
    border: 1px solid rgba(67, 214, 168, 0.3);
    border-radius: 0.5rem;
    padding: 2rem;
    transition: all 0.3s;
  }

  .speaker-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 20px rgba(67, 214, 168, 0.2);
  }

  .speaker-card h3 {
    color: var(--color-green);
    font-size: 1.3rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  .speaker-name {
    font-weight: bold;
    color: var(--text-color);
    margin-bottom: 0.5rem;
  }

  .speaker-info {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .video-card {
    background: var(--secondary-color);
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.3s;
  }

  .video-card:hover {
    transform: translateY(-4px);
  }

  .video-card iframe {
    width: 100%;
    height: 250px;
  }

  .video-card p {
    padding: 1rem;
    text-align: center;
    color: var(--color-green);
    font-weight: bold;
  }

  .registration {
    text-align: center;
    padding: 3rem;
    background: rgba(37, 23, 48, 0.5);
    border-radius: 0.5rem;
  }

  .register-btn-large {
    display: inline-block;
    background: var(--accent-color);
    color: white;
    padding: 1.5rem 3rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.2rem;
    margin-top: 1.5rem;
    transition: all 0.3s;
  }

  .register-btn-large:hover {
    background: #e55f0a;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(253, 115, 24, 0.4);
  }

  .host-info {
    text-align: center;
    color: var(--text-muted);
  }

  @media (max-width: 968px) {
    .poster {
      max-width: 400px;
    }
  }

  @media (max-width: 768px) {

    .hero-content h1 {
      font-size: 1.8rem;
    }

    .event-details p {
      font-size: 1rem;
    }

    .speakers-grid {
      grid-template-columns: 1fr;
    }

    .poster {
      max-width: 300px;
    }

    .video-grid {
      grid-template-columns: 1fr;
    }
  }
</style>